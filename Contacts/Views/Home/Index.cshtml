@model List<Contacts.Models.Contact>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <h1>My Contacts</h1>
        <h3>@Html.ActionLink("Add a new contact", "Add", "Home")</h3>
  @if (Model.Any())
  {
         <table>
       <thead>
           <tr>
               <th>Name</th>
               <th>Phone</th>
               <th></th>
           </tr>
       </thead>
       <tbody>
           @foreach (var contact in Model)
           {
               <tr>
                   <td>@contact.Name</td>
                   <td>@contact.PhoneNumber</td>
                   <td>
                       @Html.ActionLink("Edit", "Edit", "Home", new { id=@contact.ContactId}, null)
                   </td>
               </tr>
           }
       </tbody>
   </table>
  }
  else
  {
      <p>No contacts. Add one!</p>
  }
     </div>
</body>
</html>
